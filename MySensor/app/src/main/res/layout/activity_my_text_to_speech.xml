<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MyTextToSpeech">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Text To Speech"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:layout_weight="1"
        android:background="@color/colorAccent"/>

    <EditText
        android:id="@+id/type_zone"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_weight="2"
        android:hint="Type your text to be spoken"/>

    <Button
        android:id="@+id/start_speaking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="START speaking"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Speech to Text"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:layout_weight="1"
        android:background="@color/colorAccent"/>

    <TextView
        android:id="@+id/srText"
        android:layout_width="match_parent"
        android:layout_height="199dp"
        android:hint="The recognized text will be shown."
        android:layout_weight="2"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/stSysMsg"
        android:layout_width="match_parent"
        android:layout_height="199dp"
        android:hint="System message will be shown"
        android:layout_weight="2"
        android:textSize="20sp" />

    <Button
        android:id="@+id/sr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="START Listening"
        android:textSize="15sp"/>

</LinearLayout>