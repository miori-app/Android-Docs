package kr.ac.sejong.appprogramming.java1;

public class Circle {
	// data 추상화
	int x;
	int y;
	int r;

	// Circle 이 new로 만들어 질때, 생성자 초기화
	/**
	 * x,y,r을 받아 원을 생성하는 생성자
	 * @param x1
	 * @param y1
	 * @param r1
	 */
	public Circle(int x, int y, int r) {
		this.x = x;
		this.y = y;
		this.r = r;

	}

	// 원의 넓이 return (기능성) -> procedure추상화 (method)
	public double getArea() {
		return 3.14 * r * r;
	}
}
